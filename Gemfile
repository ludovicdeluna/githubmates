source 'https://rubygems.org'

# To update for each Rails Version #
gem 'rails',        '4.1.5'                         # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'sass-rails',   '~> 4.0.3'                      # Use SCSS for stylesheets
gem 'uglifier',     '>= 1.3.0'                      # Use Uglifier as compressor for JavaScript assets
gem 'coffee-rails', '~> 4.0.0'                      # Use CoffeeScript for .js.coffee assets and views
gem 'jquery-rails'                                  # Use jquery as the JavaScript library
gem 'turbolinks'                                    # following links (https://github.com/rails/turbolinks)
gem 'jbuilder',     '~> 2.0'                        # Build JSON APIs (https://github.com/rails/jbuilder)
gem 'sdoc',         '~> 0.4.0', group: :doc         # bundle exec rake doc:rails generates the API under doc/api.
gem 'spring',                   group: :development # Keeping application in background (https://github.com/rails/spring)
# * Other for each Rails Version *
# gem 'bcrypt', '~> 3.1.7'                          # Use ActiveModel has_secure_password
# gem 'unicorn'                                     # Use unicorn as the app server (J'aime bien Puma aussi !)
# gem 'capistrano-rails', group: :development       # Use Capistrano for deployment

#
# Specific for this VM
#
gem 'mysql2',       '~> 0.3.16'                     # Mysql driver
gem "github_api",   '~> 0.12.1'                     # Access to GitHub API v3
gem "byebug"

#
# Specific for development in this VM
#
group :development, :test do
  gem 'rspec-rails','~> 3.0.0'                      # Use RSpec framework instead of Test::Unit
end
